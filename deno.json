{
  "tasks": {
    "dev": "deno run --watch index.ts",
    "run-tests": "deno test --allow-read --allow-env"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.2"
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["test/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "lineWidth": 109,
    "useTabs": false,
    "semiColons": true,
    "singleQuote": false,
    "indentWidth": 2
  }
}
